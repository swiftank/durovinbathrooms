<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Confirm personal information deletion</argument>
            </action>
         </referenceBlock>
         <referenceContainer name="content">
             <block class="Maghos\Gdpr\Block\Confirm" name="gdpr_delete_confirm" template="Maghos_Gdpr::delete/confirm.phtml" cacheable="false" />
        </referenceContainer>
    </body>
</page>
